{
  "name": "octos",
  "version": "1.0.0",
  "author": "underpig1",
  "description": "HTML live wallpaper engine",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "rebuild": "cd wallpaper&npm install&cd ../&\".\\node_modules\\.bin\\electron-rebuild.cmd\"&electron-forge build",
    "package": "electron-forge package"
  },
  "dependencies": {
    "@nodert-win10-21h1/windows.media.control": "^0.1.6",
    "@nodert-win10-21h1/windows.storage.streams": "^0.1.6",
    "archiver": "^5.3.1",
    "electron-rebuild": "^3.2.9",
    "fs-extra": "^11.1.0",
    "unzipper": "^0.10.11",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-wix": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/publisher-github": "^6.2.1",
    "electron": "^23.3.6",
    "electron-packager": "^17.1.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./img/octos.ico",
        "ignore": "^/(docs|img/gallery|octos-community|wallpaper|web|\\.vscode|\\.github|\\.git)"
      },
      "rebuildConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-zip"
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "underpig1",
              "name": "octos"
            },
            "prerelease": true,
            "icon": "./img/octos.ico"
          }
        }
      ]
    }
  }
}
